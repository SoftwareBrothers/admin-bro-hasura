{
  "compilerOptions": {
      "outDir": "./build",
      "target": "es2017",
      "esModuleInterop": true,
      "jsx": "react",
      "declaration": true,
      "declarationDir": "./types",
      "strictNullChecks": true,
      "strictPropertyInitialization": true,
      "strictFunctionTypes": true,
      "strictBindCallApply": true,
      "noImplicitThis": true,
      "moduleResolution": "node",
      "module": "commonjs",
      "resolveJsonModule": true,
      "skipLibCheck": true
  },
  "include": [
      "./src/**/*",
      "./spec/**/*"
  ],
}